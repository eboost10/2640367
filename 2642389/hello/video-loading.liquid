 <style>
  .wrap-iframe { position: relative;}
  .wrap-iframe:after {
    content: ''!important;
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    display: block!important;
    background: url(https://ecstyletheme.myshopify.com/cdn/shop/t/47/assets/loading-2.svg) no-repeat center rgba(0,0,0,0.5);
    z-index: 1;
  }
  .wrap-iframe.loaded:after {
    display: none!important;
  }
</style>
<script>
  const body  = document.querySelector('body');
  var observer = new MutationObserver(function(mutations) {
    const iframes = document.querySelectorAll('.video-section iframe');
    if(iframes.length > 0){
      iframes.forEach(function(iframe){
          iframe.parentNode.classList.add("wrap-iframe");
          iframe.onload = function(){
              console.log('iframe loaded');
              iframe.parentNode.classList.add("loaded");
          };
      })
    }

  });
  const config = {
  childList: true,
  subtree: true
  };
  observer.observe(body, config);
</script>